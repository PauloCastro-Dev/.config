set autoquit
set drawbox
set dircounts
set dirfirst
set hidden
set icons
set mouse
set number
set shell pwsh

cmd open &start $Env:f

map i $less $Env:f

# leave some space at the top and the bottom of the screen
set scrolloff 10

# use enter for shell commands
map <enter> shell

map e $nvim $Env:f
